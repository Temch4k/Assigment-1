<header>
    <nav class="navbar nav navbar-inverse navbar-expand-xl navbar-expand badge-light navbar-fixed-top">
        <div class="container-fluid">
            <% if(loggedIn){ %>
            <div class="navbar-header">
                <a class="navbar-brand" href="home">
                    <img src="/images/yoVerseWebsite.png" class="website-logo">
                </a>
            </div>
            <%}else{%>
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img src="/images/yoVerseWebsite.png" class="website-logo">
                    </a>
                </div>
            <%}%>
            <div class="nav navbar-nav">
                <form action="/hashtag/search" method="POST" class="form-inline my-2  navbar-right">
                    <input class="form-control mr-sm-2" name="search" required placeholder="Search by hashtag" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
            <% if(loggedIn){ %>
            <div>
                <h5>Logged in as:</h5>
                <%= currentUser.username %>
            </div>
            <div class="nav navbad-nav">
                <a href="<%= `/hashtag/${currentUser.username}/Profile` %>"><img class="d-flex mr-3 postThumbnail" src="/img/profilePicBlank.png"></a>
            </div>
            <%}else{%>
                <div>
                    <button type="button" onclick="location.href='login';" class=" btn btn-outline-warning btn-lg"
                        id="loginBtn">Login</button>
                </div>
            <%}%>
        </div>
    </nav>
</header>

<% if(hashtags){ %>
<table class="table higherStyling">
    <thread>
        <tr>
            <th>Hashtag</th>
            <th>Posts</th>
        </tr>
    </thread>
    <tbody>
            <%# hashtags.forEach(hashtag => { %>
                <tr>
                    <td>
                        <%= hashtags.text %>
                    </td>
                    <td>
                        <%= hashtags.post %>
                    </td>
                </tr>
            <%# })%>
    </tbody>
</table>
<%}else{%>
<div>no hashtags were found</div>
<%}%>