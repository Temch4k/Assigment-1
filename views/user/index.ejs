<%if(!loggedIn){ %>
<header>
    <nav class="navbar nav navbar-inverse navbar-expand-xl navbar-expand badge-light navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/user">
                    <img src="/images/yoVerseWebsite.png" alt="logo" class="website-logo">
                </a>
            </div>
            <div class="nav navbar-nav">
                <form class="form-inline my-2  navbar-right">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
            <div>
                <button type="button" onclick="location.href='user/signup';" class=" btn btn-outline-warning btn-lg"
                    id="loginBtn">Sign Up</button>
            </div>
        </div>
    </nav>
</header>

<br>
<section>
    <!-- This is our email and password fields -->
    <br><br>
    <fieldset class="border brdr">
        <div class="higherStyling">
            <h3 class="text-center">
                Yo Account options:
            </h3>
            <div class="text-center">
                <a href="user/login">
                    <span class="button">Sign In here</span>
                </a>
                
            </div>
            <br>
            <div class="text-center">
                <a href="user/signup">
                    <span class="button">Create your yoVerse account here</span>
                </a>
            </div>
        </div>
    </fieldset>
</section>

<%}else{ %>
    <header>
        <nav class="navbar nav navbar-inverse navbar-expand-xl navbar-expand badge-light navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="home">
                        <img src="/images/yoVerseWebsite.png" class="website-logo">
                    </a>
                </div>
                <div class="nav navbar-nav">
                    <form class="form-inline my-2  navbar-right">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search"
                            aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
                <div>
                    <h5>Logged in as:</h5>
                    <%= currentUser.username %>
                </div>
                <div class="nav navbad-nav">
                    <a href="<%= `/user/${currentUser.username}/Profile` %>"><img class="d-flex mr-3 postThumbnail" src="/img/profilePicBlank.png"></a>
                </div>
            </div>
        </nav>
    </header>
    <br>

    <body>
        <div class="container mainDiv" style="color: black;">
            <fieldset class="brdr">
                <div class="text-center">
                    <div>
                        <h3>You are already signed in</h3>
                    </div>
                    <a href="/user/home">
                        <span class="button">Go home</span>
                    </a>
                </div>
            </fieldset>
        </div>
    </body>
    
<%}%>