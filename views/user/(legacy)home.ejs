<div class="row postContainer">
    <div class="col-12">
        <form action="/user/home" method="POST">
            <div class="row">
                <div class="col-12">
                    <label for="postDescription">Post here...</label>
                    <textarea class="form-control" id="postDescription" rows="5" cols="50"></textarea>
                </div>

                <div class="col-12" id="PostButtonContainer">
                    <button type="submit" class="btn btn-success">
                        Share!
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<% userArray.forEach(Post => { %>
    <% post.forEach(Post => { %>
    <div class="row">
        <div class="col-6 postContainer">
            <div class="card">
                <div class="card-block">
                    <div class="media">
                        <!-- Need to link uploaded photo with profile picture -->
                        <!-- Or make a stock user profile photo -->
                        <img class="d-flex mr-3 postThumbnail" src="/img/profilePicBlank.png">
                        <div class="media-body">
                            <h5 class="mt-0"><%= User.fullName %></h5>
                            <i><%= post.date %></i>
                            <div class="postMainBody"><%= post.postBody %></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% }); %>
<% }); %>

