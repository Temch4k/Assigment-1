<form class = "blocktext col-6" action="<%= `/user/${currentUser._id}/updatepassword?_method=PUT` %>" method="POST">
    <div class="col">
        <div class="col-sm-10 col-lg-5">
            <label for="txtPassword" class="col-md-12 col-form-label">
                <span>New Password*:</span>
            </label>
        </div>
        <div class="col-sm-10 col-lg-7 center">
            <input type="text" required id="txtPassword" name="password" required
                class="form-control col-6 center">
        </div>
    </div>
    <div class="col">
        <div class="col-sm-10 col-lg-5">
            <label for="txtComfrimPassword" class="col-md-12 col-form-label">
                <span>Confirm Password*:</span>
            </label>
        </div>
        <div class="col-sm-10 col-lg-7 center">
            <input type="text" required id="txtConfirmPassword" name="confirmPassword" required
                class="form-control col-6 center">
        </div>
    </div>
    <p>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="reset" class="btn btn-secondary">Cancel</button>
    </p>
</form> <br> <br>

